<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.farmingdale.csc311_mod3_assignment.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="50.0" prefWidth="200.0">
      <children>
         <Button fx:id="SolutionBtn" onAction="#onSolutionButtonClick" prefHeight="25.0" prefWidth="106.0" text="Find a Solution" />
         <Label fx:id="SolutionText" alignment="CENTER" prefHeight="17.0" prefWidth="170.0" text="Solution" />
         <Button fx:id="RefreshBtn" onAction="#printCards" prefHeight="25.0" prefWidth="70.0" text="Refresh" />
      </children>
   </HBox>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <ImageView fx:id="card1" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="card2" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="card3" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
         <ImageView fx:id="card4" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
      </children>
   </HBox>
   <HBox prefHeight="50.0" prefWidth="200.0">
      <children>
      
          <Label fx:id="ExpressionText" text="Enter an Expression:" />
         <TextField fx:id="ExpressionInput" prefHeight="25.0" prefWidth="170.0" />
          <Button fx:id="VerifyBtn" onAction="#onVerifyButtonClick" prefHeight="25.0" prefWidth="70.0" text="Verify" />
      </children>
   </HBox>
   <Label fx:id="ResultText" />
</VBox>
